<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
               xmlns:s="library://ns.adobe.com/flex/spark"
               xmlns:flexunitui="org.flexunit.flexui.*"
               minWidth="1024" minHeight="768"
               creationComplete="onCreationComplete()" >   
   <fx:Script>
      <![CDATA[
         import org.flexunit.runner.FlexUnitCore;
         
         import tests._old.testsuites.*;
         import tests.animation.TS_Animation;
         import tests.announcement.TS_Announcement;
         import tests.chat.TS_Chat;
         import tests.foliage.TS_Foliage;
         import tests.galaxy.TS_Galaxy;
         import tests.models.TS_Models;
         import tests.movement.TS_Movement;
         import tests.notifications.TS_Notifications;
         import tests.planetmapeditor.TS_PlanetMapEditor;
         import tests.quests.TS_Quests;
         import tests.spacemap.TS_SpaceMap;
         import tests.maps.TS_Maps;
         import tests.time.TS_Time;
         import tests.utils.TS_Utils;
         import tests.utils.components.TS_Components;
         import tests.utils.datastructures.TS_DataStructures;
         
         
         private var core:FlexUnitCore;
         
         
         private function allTestSuites() : Array
         {
            return [
               TS_Models,
               TS_Animation,
               TS_Notifications,
               TS_Utils,
               TS_DataStructures,
               TS_Components,
               TS_Movement,
               TS_SpaceMap,
               TS_Chat,
               TS_Time,
               TS_Foliage,
               TS_Announcement,
               TS_Galaxy,
               TS_Maps,
               TS_Quests,
               TS_PlanetMapEditor,
               ModelsTestSuite,
               UtilsTestSuite
            ];
         }
         
         
         public function currentRunTestSuites():Array
         {
            var testsToRun:Array = [
               TS_PlanetMapEditor
            ];
            return testsToRun;
         }
         
         
         private function onCreationComplete():void
         {
            core = new FlexUnitCore();
            core.addListener(runner);
            core.run(currentRunTestSuites());
//            core.run(allTestSuites());
         }
      ]]>
   </fx:Script>
   <flexunitui:TestRunnerBase id="runner" width="100%" height="100%"/>
</s:Application>
