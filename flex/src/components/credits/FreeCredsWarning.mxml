<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
         xmlns:s="library://ns.adobe.com/flex/spark" 
         xmlns:mx="library://ns.adobe.com/flex/mx"
         layout="{useVerticalLayout?vLayout:hLayout}"
         creationComplete="group1_creationCompleteHandler(event)">
   <fx:Script>
      <![CDATA[
         import mx.events.FlexEvent;
         
         import spark.layouts.HorizontalAlign;
         import spark.layouts.HorizontalLayout;
         import spark.layouts.VerticalAlign;
         import spark.layouts.VerticalLayout;
         
         import utils.UrlNavigate;
         import utils.locale.Localizer;
         [Bindable]
         public var useVerticalLayout: Boolean = false;
         
         [Bindable]
         private var vLayout: VerticalLayout = new VerticalLayout();
         [Bindable]
         private var hLayout: HorizontalLayout = new HorizontalLayout();
         
         private function getText(prop: String, params: Array = null): String
         {
            return Localizer.string('Market', prop, params);
         }
         
         protected function group1_creationCompleteHandler(event:FlexEvent):void
         {
            vLayout.horizontalAlign = HorizontalAlign.JUSTIFY;
            vLayout.paddingTop = 6;
            vLayout.paddingBottom = 6;
            hLayout.verticalAlign = VerticalAlign.MIDDLE;
         }
         
      ]]>
   </fx:Script>
   <s:Label color="#eec500" text="{getText('label.freeCreds')}"/>
   <s:Group>
      <s:Button skinClass="components.skins.LinkButtonSkin" 
                label="{getText('label.moreInfo')}"
                horizontalCenter="0"
                click="UrlNavigate.getInstance().showInfo('free-creds')"/>
   </s:Group>
</s:Group>
