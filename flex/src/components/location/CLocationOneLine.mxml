<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
         xmlns:s="library://ns.adobe.com/flex/spark" 
         xmlns:mx="library://ns.adobe.com/flex/mx">
   <fx:Script>
      <![CDATA[
         import models.location.Location;
         
         import utils.locale.Localizer;
         
         [Bindable]
         public var location:Location = null; 
      ]]>
   </fx:Script>
   <s:BitmapImage id="locationImage" width="24" height="24" fillMode="scale" visible="{location != null}" source="{location.bitmapData}"/>
   <s:Label id="locationLabel" left="26" top="8" text="{location == null?Localizer.string('Squadrons', 'label.unknown')
            :location.longDescription}" styleName="squadronInfo"/>
</s:Group>
