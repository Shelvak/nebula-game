<?xml version="1.0" encoding="utf-8"?>
<base:BaseContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
                    xmlns:s="library://ns.adobe.com/flex/spark" 
                    xmlns:mx="library://ns.adobe.com/flex/mx"
                    xmlns:base="components.base.*"
                    width="448" height="157">
   
   <fx:Metadata>
      [ResourceBundle("Location")]
   </fx:Metadata>
   
   <fx:Script>
      <![CDATA[
         import models.location.Location;
         
         [Bindable]
         public var location:Location = null; 
      ]]>
   </fx:Script>
   
   <!-- background -->
   <s:BitmapImage left="0" right="0" top="0" bottom="0"
                  source="{IMG.getImage('images/ui/notifications/location_background')}"/>
   
   <!-- planet, solar system or galaxy image -->
   <s:Group left="1" bottom="1" width="145" height="137" clipAndEnableScrolling="true">
      <s:BitmapImage source="{location.bitmapData}" right="0" top="0"/>
   </s:Group>
   
   <!-- information text -->   
   <s:Group left="164" top="10">
      
      <!-- galaxy sector -->
      <s:Label styleName="locationHeader" top="0"
               text="{RM.getString('Location', 'header.galaxy')}:"/>
      <s:Label top="16" text="{location.galaxySectorName}"/>
      
      <!-- solar system -->
      <s:Label styleName="locationHeader" top="40"
               text="{RM.getString('Location', 'header.solarSystem')}:"/>
      <s:Label top="56" text="{location.solarSystemName}"/>
      
      <!-- planet -->
      <s:Label styleName="locationHeader" top="80" visible="{location.hasParent}"
               text="{RM.getString('Location', 'header.planet')}:"/>
      <s:Label top="96" text="{location.planetName}" visible="{location.hasParent}"/>
      
   </s:Group>
   
   <!-- a button to navigate to this location -->
   <s:Button id="btnOpen" right="12" bottom="9"
             label="{RM.getString('Location', 'label.open')}">
      <s:click>
         location.show();
      </s:click>
   </s:Button>

</base:BaseContainer>
