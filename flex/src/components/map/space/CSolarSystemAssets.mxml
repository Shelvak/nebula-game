<?xml version="1.0"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:utils="utils.components.*"
         xmlns:ui="components.ui.*"
         visible="{model.visible}"
         includeInLayout="{model.visible}">
   <fx:Script>
      <![CDATA[
      [Bindable]
      public var model: CSolarSystemAssetsM;
      ]]>
   </fx:Script>
   <s:layout>
      <s:HorizontalLayout gap="6" verticalAlign="top"/>
   </s:layout>
   <s:Group toolTip="{model.tooltip}">
      <s:BitmapImage source="{model.icon}"/>
   </s:Group>
   <s:DataGroup dataProvider="{model.dataProvider}" width="100%">
      <s:itemRenderer>
         <fx:Component>
            <s:ItemRenderer>
               <fx:Script>
                  <![CDATA[
                  import models.player.PlayerMinimal;
                  ]]>
               </fx:Script>
               <ui:PlayerProfileButton player="{PlayerMinimal(data)}"/>
            </s:ItemRenderer>
         </fx:Component>
      </s:itemRenderer>
      <s:layout>
         <utils:FlowLayout horizontalGap="6" verticalGap="2"/>
      </s:layout>
   </s:DataGroup>
</s:Group>
