<?xml version="1.0"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:galaxy="components.map.space.galaxy.*"
         includeInLayout="{model.planets.visible || model.ships.visible}">
   <fx:Script>
      <![CDATA[
      import components.map.space.*;


      [Bindable]
      public var model: CSingleOwnerAssetsM;
      ]]>
   </fx:Script>
   <s:layout>
      <s:VerticalLayout horizontalAlign="justify"/>
   </s:layout>
   <galaxy:CSolarSystemAssets
      model="{model.planets}"
      visible="{model.planets.visible}" includeInLayout="{model.planets.visible}"/>
   <galaxy:CSolarSystemAssets
      model="{model.ships}"
      visible="{model.ships.visible}" includeInLayout="{model.ships.visible}"/>
</s:Group>
