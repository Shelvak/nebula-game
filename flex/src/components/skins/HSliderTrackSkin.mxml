<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark">
   
   <fx:Metadata>
      [HostComponent("spark.components.Button")]
   </fx:Metadata> 
   
   <s:states>
      <s:State name="up" />
      <s:State name="down" />
      <s:State name="over" />
      <s:State name="disabled" />
   </s:states>
   
   <!-- border -->
   <s:Rect left="0" right="0" top="3" bottom="3" radiusX="2" radiusY="2" height="5">
      <s:fill>
         <s:LinearGradient rotation="90" >
            <s:GradientEntry color="0x000000" alpha="0.55" />
            <s:GradientEntry color="0x000000" alpha="0.55" ratio="0.8" />
         </s:LinearGradient>
      </s:fill>
   </s:Rect>
   
   <!-- fill -->
   <s:Rect left="1" right="1" top="4" bottom="4" radiusX="2" radiusY="2">
      <s:fill>
         <s:SolidColor color="0x0F0F0F" />
      </s:fill>
   </s:Rect>
   
   <!-- shadow -->
   <s:Rect left="2" right="2" top="4" height="1">
      <s:fill>
         <s:SolidColor color="0x0F0F0F" />
      </s:fill>
   </s:Rect>
   
   <!-- hit area -->
   <s:Rect left="0" right="0" top="0" bottom="0">
      <s:fill>
         <s:SolidColor alpha="0"/>
      </s:fill>
   </s:Rect>
</s:SparkSkin>

