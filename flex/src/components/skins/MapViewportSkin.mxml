<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
             xmlns:s="library://ns.adobe.com/flex/spark"
             xmlns:mx="library://ns.adobe.com/flex/mx"
             xmlns:map="components.map.*"
             mouseEnabled="false"
             alpha.disabled="0.5"
             enabled.disabled="false">
   
   <fx:Metadata>
      [HostComponent ("components.map.controllers.MapViewport")]
   </fx:Metadata>
   
   <s:states>
      <s:State name="normal"/>
      <s:State name="disabled"/>
   </s:states>
   
   <s:Rect id="backgroundColor" top="0" bottom="0" left="0" right="0">
      <s:fill><s:SolidColor color="{hostComponent.map.getDefaultBackgroundColor()}"/></s:fill>
   </s:Rect>
   
   <s:Group id="contentGroup" clipAndEnableScrolling="true"
            top="0" bottom="0" left="0" right="0" minWidth="0" minHeight="0"/>
   
   <!--- Border of the component -->
   <s:Rect id="border" top="0" bottom="0" left="0" right="0">
      <s:stroke>
         <mx:SolidColorStroke color="0x222222" weight="2"/>
      </s:stroke>
   </s:Rect>
	
</s:SparkSkin>
