<?xml version="1.0" encoding="utf-8"?>
<!--- The Spark skin class for the Halo ProgressBar component's track. 
As an example took mx.skins.spark.ProgressBarTrackSkin -->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
             xmlns:s="library://ns.adobe.com/flex/spark"
             minHeight="4" minWidth="4">
   <!-- fill -->
   <s:Rect left="1" right="1" top="1" bottom="1" alpha="0.45">
      <s:fill>
         <s:SolidColor color="#323232"/>
      </s:fill>
   </s:Rect>
   <!-- border -->
   <s:Rect left="0" right="0" top="0" bottom="0">
      <s:stroke>
         <s:SolidColorStroke color="0x282828" weight="1"/>
      </s:stroke>
   </s:Rect>
</s:SparkSkin>