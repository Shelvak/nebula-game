<?xml version="1.0" encoding="utf-8"?>
<base:BaseSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
               xmlns:s="library://ns.adobe.com/flex/spark"
               xmlns:mx="library://ns.adobe.com/flex/mx"
               xmlns:base="components.base.*"
               toolTip.disabled="{Localizer.string('BuildingSidebar','disabled')}"
               toolTip.demo="{Localizer.string('BuildingSidebar','queueFull')}">
   
   <fx:Metadata>
      [HostComponent ("components.buildingsidebar.BuildingElement")]
   </fx:Metadata>
   
   <fx:Script>
      <![CDATA[
         import mx.core.BitmapAsset;
         
         import spark.filters.ColorMatrixFilter;
         
         import utils.Localizer;
         import utils.assets.AssetNames;
         
         
         public static const infoButtonName: String = "info";
         
         //disabled building filter
         private static const disabledFilter: Array =[new ColorMatrixFilter([
            0.7,0,0,0,0, //red
            0,0.1,0,0,0, //green
            0,0,0.1,0,0, //blue
            0,0,0,1,0,])]; //alpha
         
         //demo building filters properties
         private static const demoFilter: Array =[new ColorMatrixFilter([
            0.2,0,0,0,0, //red
            0,0.2,0,0,0, //green
            0,0,0.2,0,0, //blue
            0,0,0,1,0,])]; //alpha
         
      ]]>
   </fx:Script>
   
   <base:states>
      <s:State name="enabled"/>
      <s:State name="disabled"/>
      <s:State name="demo"/>
   </base:states>
   
   <base:layout>
      <s:VerticalLayout gap="6" horizontalAlign="center"/>
   </base:layout>
   
   <s:Group left="0" top="0" width="100%" height="80%">
      <mx:Image
         id="buildingImage" 
         horizontalAlign="center" 
         verticalAlign="middle"
         left="0" top="0" 
         width="100%" height="100%" 
         maintainAspectRatio="true"        
         filters.disabled="{disabledFilter}"
         filters.demo="{demoFilter}"
         smoothBitmapContent="true"
         resizeEffect="scale"
         source="{IMG.getBitmapAsset(AssetNames.getBuildingImageName(hostComponent.type))}"/>
      <s:Button id="infoButton" right="0"  bottom="0"
                skinClass="components.skins.InfoButtonSkin"/>
   </s:Group>
   
   <s:Label id="nameLbl" alignmentBaseline="ideographicCenter"/>
   
</base:BaseSkin>
