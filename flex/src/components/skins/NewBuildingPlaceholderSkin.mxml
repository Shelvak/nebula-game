<?xml version="1.0" encoding="utf-8"?>
<base:BaseSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
               xmlns:s="library://ns.adobe.com/flex/spark" 
               xmlns:mx="library://ns.adobe.com/flex/halo"
               xmlns:planet="components.gameobjects.planet.*"
               xmlns:base="components.base.*">
   <fx:Metadata>
      [HostComponent("components.gameobjects.building.NewBuildingPlaceholder")]
   </fx:Metadata>
   <fx:Script>
      <![CDATA[
         import components.gameobjects.planet.PlanetObjectBasementColor;
         
         import models.building.Building;
         import models.tile.Tile;
      ]]>
   </fx:Script>
   <base:states>
      <s:State name="normal"/>
      <s:State name="restrict"/>
   </base:states>
   
   <!-- layer 1: 2 tile wider and higher free space indicator -->
   <planet:PlanetObjectBasement
      right="{-Tile.IMAGE_WIDTH}" bottom="{-Tile.IMAGE_HEIGHT}"
      logicalWidth="{Building(hostComponent.model).width + Building.GAP_BETWEEN * 2}"
      logicalHeight="{Building(hostComponent.model).height + Building.GAP_BETWEEN * 2}"
      color.normal="{PlanetObjectBasementColor.BUILDING_OK}"
      color.restrict="{PlanetObjectBasementColor.BUILDING_RESTRICTED}"
      alpha="0.3"/>
   
   <!-- layer 2: Building image -->
   <!--- Building image skin part -->
   <s:BitmapImage id="mainImage"/>
   
</base:BaseSkin>
