<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
             xmlns:s="library://ns.adobe.com/flex/spark"
             xmlns:mx="library://ns.adobe.com/flex/halo"
             xmlns:minimap="components.map.controllers.minimap.*"
             width="200" height="200" clipAndEnableScrolling="true">
   
   <fx:Metadata>
      [HostComponent ("components.map.controllers.minimap.Minimap")]
   </fx:Metadata>
   
   <s:Rect width="100%" height="100%">
      <s:fill>
         <s:SolidColor color="0x000000" alpha="1"/>
      </s:fill>
   </s:Rect>
   
   <minimap:MapArea id="mapArea" width="100" height="100"/>
   
   <s:Group id="viewportIndicator">
      <s:Rect top="0" bottom="0" left="0" right="0">
         <s:stroke>
            <s:SolidColorStroke color="0xFFFF00" weight="2" alpha="0.7"/>
         </s:stroke>
         <s:fill>
            <s:SolidColor color="0xFFFF00" alpha="0.2"/>
         </s:fill>
      </s:Rect>
   </s:Group>
   
   <s:Rect top="0" bottom="0" left="0" right="0">
      <s:stroke>
         <s:SolidColorStroke color="0xcccccc" weight="2" alpha="1"/>
      </s:stroke>
   </s:Rect>
   
</s:SparkSkin>
