<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
             xmlns:s="library://ns.adobe.com/flex/spark"
             minWidth="5"
             minHeight="5"
             mouseEnabled="false"
             mouseChildren="false">
   
   <fx:Metadata>
      [HostComponent("spark.components.Button")]
   </fx:Metadata>
   
   <!-- states -->
   <s:states>
      <s:State name="up" />
      <s:State name="over" />
      <s:State name="down" />
      <s:State name="disabled" />
   </s:states>
   
   <s:Label id="labelDisplay"
            maxDisplayedLines="1"
            fontWeight="bold"
            color.up="0xFFC000"
            color.over="0x00D8E3"
            color.down="0x00D8E3"
            color.disabled="0x8E8E8E"
            left="0" right="0">
   </s:Label>
   
</s:SparkSkin>
