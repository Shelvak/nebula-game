<?xml version="1.0" encoding="utf-8"?>
<base:BaseContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
         xmlns:s="library://ns.adobe.com/flex/spark" 
         xmlns:mx="library://ns.adobe.com/flex/mx" 
         visible="{ML.notificationText != null}"
         width="300" height="50" 
         xmlns:base="components.base.*"
         show="basecontainer1_showHandler(event)">
   <fx:Script>
      <![CDATA[
         import mx.events.FlexEvent;
         
         import org.osmf.events.TimeEvent;
         
         private static const MSG_SHOW_DURRATION: int = 3000;
         
         private var hideTimer: Timer;

         protected function basecontainer1_showHandler(event:FlexEvent):void
         {
            if (hideTimer != null)
            {
               hideTimer.stop();
               hideTimer = null;
            }
            hideTimer = new Timer(MSG_SHOW_DURRATION, 1);
            hideTimer.addEventListener(TimerEvent.TIMER, function(e: TimerEvent): void
            {
               ML.notificationText = null;
            });
            hideTimer.start();
         }

      ]]>
   </fx:Script>
   <s:Rect alpha="0.59" radiusX="5" radiusY="5" left="0" top="0" right="0" bottom="0">
      <s:fill>
         <s:SolidColor color="#000000"/>
      </s:fill>
   </s:Rect>
   <s:Group id="content" left="6" top="6" bottom="6" right="6">
      <s:Label text="{ML.notificationText}" fontSize="12" fontWeight="bold"/>
   </s:Group>
</base:BaseContainer>
