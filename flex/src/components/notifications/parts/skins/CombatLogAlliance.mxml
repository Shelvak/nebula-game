<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
                          xmlns:s="library://ns.adobe.com/flex/spark" 
                          xmlns:mx="library://ns.adobe.com/flex/mx">
   <fx:Metadata>
      [ResourceBundle("Players")]
   </fx:Metadata>
   <fx:Script>
      <![CDATA[
         [Bindable]
         public var alliance: String;
         
         [Bindable]
         public var headerColor: uint;
         
         public function addPlayers(players: Array): void
         {
            for each (var player: Object in players)
            {
               var tempLabel: Label = new Label();
               tempLabel.text = player.name == -1?resourceManager.getString('Players','leftPlayer'):(
                  player.name == -2?resourceManager.getString('Players','npc'):player.name);
               playersCont.addElement(tempLabel);
            }
         }
         
         
      ]]>
   </fx:Script>
   <s:Group id="playersCont">
      <s:Label styleName="h2" text="{alliance}" color="{headerColor}"/>
      <s:layout>
         <s:VerticalLayout/>
      </s:layout>
   </s:Group>
</s:Group>
