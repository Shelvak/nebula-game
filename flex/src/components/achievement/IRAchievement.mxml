<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
                xmlns:s="library://ns.adobe.com/flex/spark" 
                xmlns:mx="library://ns.adobe.com/flex/mx" 
                autoDrawBackground="true" xmlns:unitsscreen="components.unitsscreen.*" xmlns:achievement="components.achievement.*">
   <fx:Script>
      <![CDATA[
         import components.base.Filters;
         
         import controllers.objects.ObjectClass;
         
         import models.achievement.MAchievement;
         
         import utils.StringUtil;
         import utils.locale.Localizer;
         
         [Bindable]
         private var achievement: MAchievement;
         
         public override function set data(value:Object):void
         {
            achievement = MAchievement(value);
         }
         
         public override function get data():Object
         {
            return achievement;
         }
      ]]>
   </fx:Script>
   
   <achievement:AchievementComp toolTip="{achievement.objectiveText}"
                                achievement="{achievement}"
                                filters="{achievement.completed?[]:Filters.GREY_FILTER}"/>
   
</s:ItemRenderer>
