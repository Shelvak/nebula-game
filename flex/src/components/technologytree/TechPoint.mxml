<?xml version="1.0" encoding="utf-8"?>
<base:BaseContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
                    xmlns:s="library://ns.adobe.com/flex/spark" 
                    xmlns:mx="library://ns.adobe.com/flex/mx"
                    xmlns:base="components.base.*">
   <fx:Script>
      <![CDATA[
         import models.ModelsCollection;
         import models.parts.events.UpgradeEvent;
         import models.technology.Technology;
         
         import mx.collections.ArrayCollection;
         
         import utils.assets.AssetNames;
         
         public var xPos: int;
         public var yPos: int;
         
         public function addBaseTech(tech: Technology): void
         {
            baseTechs.addItem(tech);
            tech.addEventListener('validationChange', refresh);
            refresh();
         }
         
         private function refresh(e: Event = null): void
         {
            for each (var tech: Technology in baseTechs)
            {
               if (tech.isValid)
               {
                  valid = true;
                  return;
               }
            }
            valid = false;
         }
         
         [Bindable]
         private var valid: Boolean = false;
         
         [Bindable]
         private var baseTechs: ModelsCollection = new ModelsCollection();
      ]]>
   </fx:Script>
   <s:BitmapImage visible="{baseTechs.length != 0}" left="-7" top="-7" source="{IMG.getImage(AssetNames.UI_IMAGES_FOLDER + 
                  'technology_tree/point_' + (valid ? 'active':'inactive'))}"/>
</base:BaseContainer>


