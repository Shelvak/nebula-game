<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
         xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:battle="components.battle.*"
         xmlns:base="components.base.*"
         click="this_clickHandler(event)"
         creationComplete="Messenger.init(this)"
         mouseEnabled="{link != null}"
         mouseChildren="{link != null}">
   <fx:Script>
      <![CDATA[
      import controllers.Messenger;

      import utils.UrlNavigate;
      import utils.locale.Localizer;


      [Bindable]
      public var link: String;

      [Bindable]
      public var text: String = '';

      private function this_clickHandler(event: MouseEvent): void {
         if (link) {
            UrlNavigate.getInstance().showUrl(link);
         }
      }
      ]]>
   </fx:Script>
   <battle:DarkBackground width="100%" height="100%"/>
   <base:AdvancedContainer width="100%" height="100%">
      <s:Label text="{text}" color="#eec500" fontSize="20" 
               fontWeight="bold" paddingLeft="12" paddingRight="12" 
               paddingBottom="8" paddingTop="8" textAlign="center"/>
      <s:Label visible="{link!=null}" text="{Localizer.string('Messenger', 'clickHere')}" paddingLeft="12" 
               paddingRight="12" paddingBottom="8" textAlign="center" fontWeight="bold"
               fontSize="16" color="#eec500"/>
      <base:layout>
         <s:VerticalLayout horizontalAlign="justify"/>
      </base:layout>
   </base:AdvancedContainer>
   
</s:Group>
