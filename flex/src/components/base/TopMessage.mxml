<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
         xmlns:s="library://ns.adobe.com/flex/spark" 
         xmlns:mx="library://ns.adobe.com/flex/mx" 
         xmlns:battle="components.battle.*" 
         mouseChildren="false" mouseEnabled="false"
         creationComplete="Messenger.init(this)">
   <fx:Script>
      <![CDATA[
         import controllers.Messenger;
         
         import utils.Localizer;
         
         [Bindable]
         public var text: String = '';
      ]]>
   </fx:Script>
   <battle:DarkBackground width="100%" height="100%"/>
   <s:Label text="{text}" color="#eec500" fontSize="20" 
            horizontalCenter="0" fontWeight="bold" paddingLeft="12" paddingRight="12" 
            paddingBottom="8" paddingTop="8"/>
</s:Group>
