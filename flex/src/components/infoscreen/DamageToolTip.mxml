<?xml version="1.0"?>
<s:Group 
   xmlns:fx="http://ns.adobe.com/mxml/2009"    
   xmlns:mx="library://ns.adobe.com/flex/mx"    
   xmlns:base="components.base.*"  
   xmlns:s="library://ns.adobe.com/flex/spark"
   implements="mx.core.IToolTip" 
   alpha=".75">
   <fx:Metadata>
      [ResourceBundle ('infoScreen')]
   </fx:Metadata>
   <fx:Script>
      <![CDATA[
         import models.infoscreen.ArmorTypes;
         //  Implement required methods of the IToolTip interface; these 
         //  methods are not used in this example, though.
         [Bindable]
         public var title: String;
         
         [Bindable]
         public var armorType: String;
         
         [Bindable]
         public var dmg: int;
         
         [Bindable]
         public var coef: Number;
         
         private var _text:String;
         
         public function get text():String { 
            return _text; 
         } 
         public function set text(value:String):void {
         } 
         
         private function getTotalDamage(_dmg: int, _coef: Number): int
         {
            return Math.round(dmg*coef);
         }
      ]]>
   </fx:Script>
   <s:Rect width="100%" height="100%" radiusX="5" radiusY="5">
      <s:fill>
         <mx:SolidColor color="#000000"/>
      </s:fill>
   </s:Rect>
   <s:Group top="6" bottom="6" left="6" right="6">
      <s:Label fontSize="12" fontWeight="bold" color="#eec500" text="{title}"/>
      <base:ImageAndLabel type="{armorType}" 
                          textToDisplay="{resourceManager.getString('infoScreen', 'armorShort.'+ armorType)}" 
                          width="150"/>
      <s:Label fontSize="12" fontWeight="bold" color="#eec500" text="{resourceManager.getString(
               'infoScreen', 'specialDamage', [dmg, coef, getTotalDamage(dmg, coef)])}"/>
      <s:layout>
         <s:VerticalLayout/>
      </s:layout>
   </s:Group>
</s:Group>