<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
                xmlns:s="library://ns.adobe.com/flex/spark" 
                xmlns:mx="library://ns.adobe.com/flex/mx"
                autoDrawBackground="false" 
                xmlns:base="components.base.*"
                width="100%">
   <fx:Script>
      <![CDATA[
         import components.ratings.RatingsWidths;
         
         import models.infoscreen.MInfoRow;
         import models.player.MRatingPlayer;
         [Bindable]
         private var model: MInfoRow;
         public override function set data(value:Object):void
         {
            model = MInfoRow(value);
            super.data = model;
         }
         
      ]]>
   </fx:Script>
   <s:Rect left="0" right="0" top="0" bottom="0">
      <s:fill>
         <s:SolidColor color="{itemIndex%2==0?0x0e0e0e:0x141414}"/>
      </s:fill>
   </s:Rect>
   <s:Group top="3" bottom="3" left="0" right="0" id="row">
      <s:layout>
         <s:HorizontalLayout gap="1" verticalAlign="middle" paddingLeft="3"/>
      </s:layout>
      <s:Label text="{model.property}" width="190" textAlign="left"/>
      <s:Label text="{model.current}" width="{(row.width - 199) / 3}" 
               textAlign="center"/>
      <s:Label text="{model.after}" width="{(row.width - 199) / 3}" 
               textAlign="center"/>
      <s:Label text="{model.diff}" width="{(row.width - 199) / 3}" 
               textAlign="center"/>
   </s:Group>
</s:ItemRenderer>
