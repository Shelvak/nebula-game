<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
         xmlns:s="library://ns.adobe.com/flex/spark" 
         xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:base="components.base.*"
         width="100%" height="100%">
   <fx:Script>
      <![CDATA[
         import controllers.players.AuthorizationManager;
         
         [Bindable(event="willNotChange")]
         private function get authManager() : AuthorizationManager {
            return AuthorizationManager.getInstance();
         }
      ]]>
   </fx:Script>
   <s:layout>
      <s:VerticalLayout gap="20" verticalAlign="middle" horizontalAlign="center"/>
   </s:layout>
   <base:SpinnerContainer busy="{authManager.working}" timeoutEnabled="false"/> 
   <s:Label text="{authManager.statusText}"/>
</s:Group>
