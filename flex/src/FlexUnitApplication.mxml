<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
               xmlns:s="library://ns.adobe.com/flex/spark" 
               xmlns:mx="library://ns.adobe.com/flex/halo"
               xmlns:flexunitui="http://www.adobe.com/2009/flexUnitUIRunner"
               minWidth="1024" minHeight="768"
               creationComplete="onCreationComplete()" >   
   <fx:Script>
      <![CDATA[
         import config.Config;
         
         import namespaces.client_internal;
         
         import org.flexunit.listeners.UIListener;
         import org.flexunit.runner.FlexUnitCore;
         
         import tests._old.testsuits.*;
         import tests.animation.TSAnimation;
         import tests.controllers.ui.TSUIControllers;
         import tests.models.TCHealPrice;
         import tests.models.TSModels;
         import tests.movement.TSMovement;
         import tests.notifications.TSNotifications;
         import tests.spacemap.TSSpaceMap;
         import tests.utils.TSUtils;
         import tests.utils.components.TSComponents;
         import tests.utils.datasctructures.TSDataStructures;
         
         import utils.assets.ImagePreloader;
         
         
         private var core:FlexUnitCore;
         
         
         private function allTestSuites() : Array
         {
            return new Array(
               TSModels,
               TSAnimation,
               TSNotifications,
               TSUtils,
               TSDataStructures,
               TSComponents,
               TSUIControllers,
               TSMovement,
               TSSpaceMap,
               CommunicationsTestSuite,
               ModelsTestSuite,
               UtilsTestSuit
            );
         }
         
         
         public function currentRunTestSuite():Array
         {
            var testsToRun:Array = new Array(
               TCHealPrice
            );
            return testsToRun;
         }
         
         
         private function onCreationComplete():void
         {
            ImagePreloader.testMode = true;
            Config.client_internal::getSolarSystemVariations = function() : int { return int.MAX_VALUE };
            
            core = new FlexUnitCore();
            core.addListener(new UIListener(runner));
            core.run(currentRunTestSuite());
         }
      ]]>
   </fx:Script>
   <flexunitui:TestRunnerBase id="runner" width="100%" height="100%"/>
</s:Application>
